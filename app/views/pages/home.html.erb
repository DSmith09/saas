<div class="jumbotron text-center">
    <h1>Welcome to Dev Match</h1> 
    <h3>A membership site where talent meets opportunity.</h3>
</div>
<div class="row">
    <% if user_signed_in? %>
        <div class="col-md-6">
            <div class="well">
                <h2 class="text-center">Your Profile</h2>
                <% if current_user.profile %>
                    <%= link_to "Edit your Profile", edit_user_profile_path(current_user.id), class: 'btn btn-warning btn-lg btn-block' %>
                    <%= link_to "View your Profile", user_path(current_user.id), class: 'btn btn-success btn-lg btn-block' %>
                <% else %>
                    <p class="text-center">Create your profile so that you can share your information with the community</p>
                    <%= link_to "Create your profile", new_user_profile_path(current_user), class: 'btn btn-success btn-lg btn-block' %>
                <% end %>
            </div>
        </div>
        <div class="col-md-6">
            <div class="well">
                <h2 class="text-center">The Community</h2>
                <p class="text-center">Visit the Community to meet other developers, entrepreneurs, and investors!</p>
                <%= link_to "Visit the Community", users_path, class: 'btn btn-primary btn-lg btn-block' %>
            </div>
        </div>
    <% else %>
        <div class="col-md-6">
            <div class="well text-center">
                <h2>
                   Basic Membership 
                </h2>
                <h4>
                    Sign Up for free and get basic access to the community.
                </h4>
                </br>
                <%= link_to "Sign up free", new_user_registration_path(plan: @basic_plan.id), class: 'btn btn-primary bth-lg btn-block' %>
            </div>
        </div>
        <div class="col-md-6">
            <div class="well text-center">
                <h2>
                    Pro Membership
                </h2>
                <h4>
                    Sign Up for the pro account for $10/month and get access to the community and contact info!
                </h4>
                <%= link_to "Sign up for Pro", new_user_registration_path(plan: @pro_plan.id), class: 'btn btn-success bth-lg btn-block' %>
            </div>
        </div>
    <% end %>
</div>